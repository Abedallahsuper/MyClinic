<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/innerColor">

    <ImageView
        android:id="@+id/imgSlide1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTitleSlide1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="تطبيق العيادة"
        android:textSize="24sp"
        android:textColor="@color/app_themecolor"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgSlide1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvDescSlide1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="حجز المواعيد بسهولة ومتابعة سجلاتك الطبية"
        android:textColor="@color/actionbarcolor"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSlide1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
